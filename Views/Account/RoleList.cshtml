@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "RolesList";
}

<h1>Roles List</h1>
<a asp-action="CreateRole" class="btn btn-success">Create New Role</a>
<table class="table table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(x=>x.Name)</th>
        <th>Operations</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <a asp-action="EditRole" asp-controller="Account" class="btn btn-warning" asp-route-id="@role.Id">
                    Edit Role
                </a>
                <a asp-action="DeleteRole" asp-controller="Account" class="btn btn-danger" asp-route-id="@role.Id">
                    Delete Role
                </a>
            </td>

        </tr>

    }
</table>